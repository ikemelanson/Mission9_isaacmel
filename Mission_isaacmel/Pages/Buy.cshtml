@page
@model Mission_isaacmel.Pages.BuyModel
@{
}

<h2>Your Basket</h2>

    <table class="table table-bordered table-striped">

        <thead>
            <tr>
                <th>Title</th>
                <th>Quantity</th>
                <th>Cost</th>
                <th>Subtotal</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var i in Model.basket.Items)
            {
            <tr>
                <td>@i.Book.Title</td>
                <td>@i.Quantity</td>
                <td>@i.Book.Price.ToString("c")</td>
                <td>@((i.Quantity * i.Book.Price).ToString("c"))</td>
            </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <td colspan="3">Total:</td>
                <td>@Model.basket.CalcTotal().ToString("c")</td>
            </tr>
        </tfoot>

    </table>
<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Back to Store</a>
</div>